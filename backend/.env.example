# Backend Environment Configuration Example
# Copy this to .env and fill in your actual values

# Database Connection
PGHOST=localhost
PGPORT=5432
PGDATABASE=spaw_db
PGUSER=postgres
PGPASSWORD=your_secure_password_here

# JWT Authentication
# Generate secure random strings using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your_access_secret_key_minimum_32_chars_recommended
JWT_REFRESH_SECRET=your_refresh_secret_key_minimum_32_chars_recommended
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=30d

# Server Configuration
PORT=4000
NODE_ENV=development

# Optional: Frontend URLs (adjust for your deployment)
# FRONTEND_URL=http://localhost:5173
